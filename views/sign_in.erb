<form action="/users/signin" method="post">
  <div class="username">
    <label for="username">Username:
      <input name="username" value="<%=params[:username]%>">
    </label>
  </div>
  <div class="password">
    <label for="password">Password:
      <input name="password" type="password">
    </label>
  </div>
  <button type="submit">Sign In</button>
</form>